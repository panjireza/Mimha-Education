<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="8dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_lokasi_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B9FF5722"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="NILAI AKHIR SISWA"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMath"
        style="@style/CardView_jadwalShalat">

        <LinearLayout
            style="@style/LinearLayout_mataPelajaran"
            android:background="@color/colorPrimary">
            <TextView
                style="@style/mataPelajaran"
                android:text="Matematika">
            </TextView>

            <TextView
                android:id="@+id/tvNilaiMath"
                style="@style/nilaiAkhir">

            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBind"
        style="@style/CardView_jadwalShalat">

        <LinearLayout
            style="@style/LinearLayout_mataPelajaran"
            android:background="@color/colorPrimary">

            <TextView
                style="@style/mataPelajaran"
                android:text="Bahasa Indonesia"></TextView>

            <TextView
                android:id="@+id/tvNilaiBind"
                style="@style/nilaiAkhir"

                >
            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOl"
        style="@style/CardView_jadwalShalat">

        <LinearLayout
            style="@style/LinearLayout_mataPelajaran"
            android:background="@color/colorPrimary">
            <TextView
                style="@style/mataPelajaran"
                android:text="Olahraga">
            </TextView>

            <TextView
                android:id="@+id/tvNilaiOlahraga"
                style="@style/nilaiAkhir"

                >

            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAgama"
        style="@style/CardView_jadwalShalat">

        <LinearLayout
            style="@style/LinearLayout_mataPelajaran"
            android:background="@color/colorPrimary">
            <TextView
                style="@style/mataPelajaran"
                android:text="Pendidikan Agama">
            </TextView>

            <TextView
                android:id="@+id/tvNilaiAgama"
                style="@style/nilaiAkhir"
                android:text=""
                >

            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>